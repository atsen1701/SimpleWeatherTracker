@page
@model SideProject_C__.Pages.WeatherTracker.Profile
@{
    ViewData["Title"] = "Profile";
}

@section Styles {
    <link rel="stylesheet" href="~/WeatherTracker/Profile.cshtml.css" />
}

<div class="container">
    <div class="profile-card">
        <div class="profile-header">
            <h1>WeatherTracker</h1>
            <span class="version">Version 1.0.0</span>
        </div>
        
        <div class="profile-content">
            <div class="info-section">
                <h3>About</h3>
                <p>A modern weather tracking application that provides real-time weather information using OpenWeatherMap API.</p>
            </div>

            <div class="info-section">
                <h3>Features</h3>
                <ul>
                    <li>Real-time weather data</li>
                    <li>Temperature in Celsius</li>
                    <li>Weather conditions</li>
                    <li>Modern UI with Glassmorphism</li>
                </ul>
            </div>

            <div class="info-section">
                <h3>Developer</h3>
                <div class="developer-info">
                    <p><strong>Created by:</strong> Atsen</p>
                    <p><strong>Year:</strong> 2025</p>
                </div>
            </div>
        </div>
    </div>
</div>

